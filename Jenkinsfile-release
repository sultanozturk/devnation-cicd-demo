pipeline {
  agent {
    label 'skopeo'
  }
  stages {
    stage('Promote Images to Quay') {
      steps {
        script {
          openshift.withCluster() {
            def srcMapitRef = "image-registry.openshift-image-registry.svc:5000/openshift/"
            def destMapitRef = "quay.io/repository/sultanozturk/mapit-spring"
            def srcToken = readFile "/run/secrets/kubernetes.io/serviceaccount/token"

            withCredentials([usernamePassword(credentialsId: "cicd-quay-credentials", usernameVariable: "QUAY_USER", passwordVariable: "QUAY_PASSWORD")]) {
              sh "skopeo copy http://${srcMapitRef} https://${destMapitRef} --src-creds openshift:${srcToken} --dest-creds ${env.QUAY_USER}:${env.QUAY_PASSWORD} --src-tls-verify=false --dest-tls-verify=false"
            }
          }
        }
      }
    }
  }
}
